{
  "name": "smule-desktop",
  "description": "A desktop app for Smule",
  "author": {
    "name": "michei69"
  },
  "private": true,
  "license": "MIT",
  "version": "2.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"cross-env DEV= tsc-watch -p tsconfig.electron.json --onSuccess \\\"electron .\\\"\"",
    "preview": "vite build && tsc -p tsconfig.electron.json && cross-env PREVIEW= electron .",
    "build": "vite build && tsc -p tsconfig.electron.json && electron-forge make",
    "lint": "eslint .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "test": "ts-node -P ./test/tsconfig.json ./test/index.ts",
    "generate_ipc": "ts-node -P ./scripts/tsconfig.json ./scripts/generateIPCFiles.ts",
    "bump-patch": "npm version patch -m \"[bump] v%s\"",
    "bump-minor": "npm version minor -m \"[bump] v%s\"",
    "bump-major": "npm version major -m \"[bump] v%s\"",
    "copy-local-smule-js": "cp -r ../smule-api/dist/* ./node_modules/smule.js/dist/",
    "cp": "yarn copy-local-smule-js"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.3",
    "@tailwindcss/postcss": "^4.0.0",
    "agora-rtc-sdk-ng": "^4.23.3",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "croppie": "^2.6.5",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.474.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.6.0",
    "smule.js": "^1.3.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "tsc-watch": "^6.2.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.17.0",
    "@types/cli-progress": "^3",
    "@types/croppie": "^2",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "cli-progress": "^3.12.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "34.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^4.0.0",
    "ts-morph": "^25.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  },
  "packageManager": "yarn@4.9.1"
}
